server {
    listen 80;

    server_name 54.226.226.2;   # replace _ with your domain if you have one

    # React frontend build
    root /home/ubuntu/project-planner-agent-system/frontend/build;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    # FastAPI backend
    location /api/ {
        proxy_pass http://127.0.0.1:8000/;
    }
}