server {
    listen 80;
    server_name 172.28.3.20 naii-project-planner.naii.com;

    # React frontend build
    root /home/ubuntu/project-planner-agent-system/frontend/build;
    index index.html;

    # Serve React app (catch-all for client-side routing)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy all backend requests (API and auth)
    location ~ ^/(api|auth|start-duo-login|health|join|chat|projects|leave|uploads|invitations|test-email|test-credentials)(/.*)?$ {
        proxy_pass http://127.0.0.1:8000$request_uri;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: serve static assets with caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}